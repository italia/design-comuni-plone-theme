{
  "name": "volto-starter-kit",
  "description": "Volto Starter Kit",
  "license": "MIT",
  "version": "4.0.0-alpha",
  "scripts": {
    "start": "razzle start",
    "postinstall": "yarn omelette",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "build": "razzle build",
    "test": "razzle test --env=jsdom --passWithNoTests",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/volto/src/i18n.js"
  },
  "jest": {
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.css$": "jest-css-modules",
      "^.+\\.scss$": "jest-css-modules",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@plone/volto).+\\.js$"
    ],
    "moduleNameMapper": {
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "@package/(.*)$": "<rootDir>/src/$1",
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup.js"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-idiomatic-order",
      "./node_modules/prettier-stylelint/config.js"
    ]
  },
  "engines": {
    "node": "^10 || ^12"
  },
  "dependencies": {
    "@plone/volto": "plone/volto#split_styles",
    "bootstrap-italia": "1.3.8",
    "react-bootstrap": "1.0.0-beta.14"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.0.1",
    "node-sass": "4.13.0",
    "postcss-overrides": "3.1.4",
    "prettier": "1.17.0",
    "prettier-stylelint": "0.4.2",
    "sass-loader": "8.0.0",
    "svg-inline-loader": "0.8.0",
    "svg-inline-react": "3.2.0"
  },
  "resolutions": {
    "@plone/volto/razzle/webpack-dev-server": "3.2.0"
  }
}
