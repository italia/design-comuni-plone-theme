<div class="skip-link-wrapper"
     i18n:domain="plone"
     tal:define="url view/current_page_url;
                 content_id view/content_id;
                 navigation_id view/navigation_id">
    <a accesskey="2"
       class="skip-link skip-link-content"
       tal:attributes="href string: ${url}#${content_id}"
       i18n:translate="label_skiptocontent">
        <span>Skip to content</span>
    </a>
    <a accesskey="6"
       class="skip-link skip-link-navigation"
       tal:attributes="href string: ${url}#${navigation_id}"
       i18n:translate="label_skiptocontent">
       <span>Skip to navigation</span>
    </a>
</div>
